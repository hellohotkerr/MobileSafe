<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   >
    <TextView 
        android:id="@+id/tv_callsmssafe_blacknum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345678"
        android:textSize="18sp"
        android:textColor="#ff0000"
        android:layout_margin="5dp"/>
     <TextView 
        android:id="@+id/tv_callsmssafe_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话拦截"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/tv_callsmssafe_blacknum"/>
     <ImageView 
         android:id="@+id/iv_callsmssafe_delete"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/selector_blacknumdelete_btn"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"/>

</RelativeLayout>
