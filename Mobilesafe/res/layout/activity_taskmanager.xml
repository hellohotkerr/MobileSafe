<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<!-- 将对应的属性抽取到样式中去 -->
    <TextView
        android:text="进程管理"
       style="@style/TitleStyle" />
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/tv_taskmanage_processes"
             android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="运行中进程：\n13个"
            android:textSize="16sp"
         	android:gravity="center"
         	android:paddingTop="5dp"
         	android:paddingBottom="5dp"/>
        <TextView 
            android:id="@+id/tv_taskmanage_freeandtotalram"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="剩余/总内存：\n504MB/600MB"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingTop="5dp"
         	android:paddingBottom="5dp"/>
    </LinearLayout> 
      <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ListView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_taskmanager_process"/>
      <!--   <TextView 
            android:id="@+id/tv_softmanager_userorsystem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户程序(19)"
            android:background="#888888"
            android:textColor="#ffffff"/> -->
        <ProgressBar 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loading"
            android:layout_gravity="center"
             android:indeterminateDrawable="@drawable/progressbar_drawable"/>
    </FrameLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="all"
            android:text="全选"/>
        <Button android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="cancel"
            android:text="取消"/>
        <Button android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="clear"
            android:text="清理"/>
        <Button android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="setting"
            android:text="设置"/>
    </LinearLayout>
    
   
</LinearLayout>
